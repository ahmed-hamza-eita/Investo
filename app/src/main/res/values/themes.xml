<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Investo" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>

        <!--        System ui configuration-->
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">false
        </item> <!--make content of status bar dark -->
        <item name="android:navigationBarColor">@color/primary_color</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true
        </item> <!--make content of navigation bar dark -->
    </style>

    <style name="Theme.Investo" parent="Base.Theme.Investo" />

    <style name="MainActivityTheme" parent="Theme.Investo">
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>

        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    <style name="toastStyle">
        <item name="stTextColor">@color/black</item>
        <item name="stTextSize">@dimen/_12ssp</item>
        <item name="stColorBackground">@color/white</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/white</item>
        <item name="stIconStart">@drawable/ic_logo</item>
        <item name="stLength">SHORT</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/cairo_semibold</item>
    </style>
    <style name="MediumTextViewStyle">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="DescribeMessageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textColor">@color/neutral_grey_color</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_16sdp</item>
        <item name="android:background">@drawable/checked_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/cairo_medium</item>
    </style>


    <style name="SocialButtonStyle">
        <item name="android:textColor">@color/neutral_grey_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_16sdp</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/neutral_grey_color</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
    </style>
</resources>