<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Investo" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>

        <!--        System ui configuration-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true
        </item> <!--make content of status bar dark -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true
        </item> <!--make content of navigation bar dark -->
    </style>

    <style name="Theme.Investo" parent="Base.Theme.Investo" />

    <style name="MainActivityTheme" parent="Theme.Investo">
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>

        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/text_small</item>
        <iitem name="android:textAllCaps">false</iitem>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>