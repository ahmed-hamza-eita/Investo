<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Investo" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>

        <!--        System ui configuration-->
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">false
        </item> <!--make content of status bar dark -->
        <item name="android:navigationBarColor">@color/primary_color</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true
        </item> <!--make content of navigation bar dark -->
    </style>

    <style name="Theme.Investo" parent="Base.Theme.Investo" />

    <style name="MainActivityTheme" parent="Theme.Investo">
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>

        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
    </style>


    <style name="HOneTextStyle">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="fontFamily">@font/cairo_bold</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="DescribeMessageStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/neutral_grey_color</item>
    </style>
    <style name="toastStyle">
        <item name="stTextColor">@color/black</item>
        <item name="stTextSize">@dimen/spacing_too_small</item>
        <item name="stColorBackground">@color/white</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/white</item>
        <item name="stIconStart">@drawable/logo</item>
        <item name="stLength">SHORT</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>